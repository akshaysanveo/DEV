<html lang="en">
<head>
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~")Content/sanveo_rgb-a-57x60.png" />
    <title>Sanveo Inspire</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no'
          name='viewport'>

    <link href="~/Vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->

    <link href="~/Vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- NProgress -->


    <link href="~/Vendors/nprogress/nprogress.css" rel="stylesheet" />
    <!-- Animate.css -->

    <link href="~/Vendors/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/Vendors/build/css/custom.min.css" rel="stylesheet" />
    <style type="text/css">
        input.empty {
            font-family: FontAwesome;
            font-style: normal;
            font-weight: normal;
            text-decoration: inherit;
        }

        #loginforInspire {
            zoom: 0.8;
        }
    </style>

</head>
<body class="login" background="white" id="loginforInspire">
    <div>
        <br /><br /><br />
        <center style="padding-top: 120px;">
            <div style="width:400px;height:450px;-webkit-border-radius: 20px;-moz-border-radius: 20px;border-radius: 20px;border:2px solid #020314;background:rgba(0,0,0,0.0);-webkit-box-shadow: #0D8B94 5px 5px 5px;-moz-box-shadow: #0D8B94 5px 5px 5px; box-shadow: #0D8B94 5px 5px 5px;">
                <div class="login_wrapper">
                    <div class="animate form login_form">
                        <section class="login_content">
                            <div>
                                @*<img src="~/Content/sanveo_rgb-a-57x60.png" />*@
                                @*<img src="~/Content/Sanveo Inspire.png"  />*@
                                <img src="~/Content/SanveoInspire.png" />
                            </div>
                            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                            {
                                <h1>Login Form</h1>
                                <div class="col-xs-12">
                                    <input type="text" class="form-control empty" name="username" placeholder="&#xF007;  Username" value="@(ViewBag.user)" />
                                </div>
                                <div class="col-xs-12">
                                    <input type="password" class="form-control empty" name="password" placeholder="&#xF023;  Password" value="@(ViewBag.pass)" />
                                </div>
                                <div class="pull-left">
                                    <label>&nbsp;&nbsp;&nbsp;<input type="checkbox" name="rememberme" checked />Remember me</label> <br />
                                </div>

                                <div class="col-xs-12">
                                    <button id="btnLogin" class="btn btn-default submit" style="border-radius:10px"><b>Login</b></button>
                                </div>
                                <div class="col-xs-12">
                                    <h2>@TempData["Message"]</h2>
                                </div>
                                <div class="clearfix"></div>
                                <div class="separator">
                                    <div class="clearfix"></div>
                                    <br />
                                    <div>
                                        <p>©2017 All Rights Reserved. Sanveo. Privacy and Terms</p>
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </center>
    </div>
    <br />
    @*<div class="alert alert-danger alert-dismissable" style="width: 360px; margin: 0 auto"
             id="dvMessage">
            <i class="fa fa-ban"></i>
        </div>*@

    <!-- jQuery 2.0.2 -->

    <script src="~/Skins/js/plugins/jQuery/jQuery-2.1.4.min.js" type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js" type="text/javascript"></script>
    <!-- Bootstrap -->
    <script src="~/Skins/js/bootstrap.min.js" type="text/javascript"></script>
    <script type="text/javascript">
                $(document).ready(function () {
                    //console.log("Screen Height = " + screen.height);
                    $("#hdnScreenHeight").val(screen.height);
                    //console.log($("#hdnScreenHeight").val());
                });
                $('#username').on('keyup', function () {
                    var input = $(this);
                    if (input.val().length === 0) {
                        input.addClass('empty');
                    } else {
                        input.removeClass('empty');
                    }
                });
    </script>
</body>
</html>

